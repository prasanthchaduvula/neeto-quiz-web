.header.bg-white.border-b.shadow-sm.py-4.mb-6
  .container.mx-auto.flex.flex-grow-1.px-4
    = link_to 'NitroAcademy', root_path, class: 'text-2xl font-semibold hover:text-teal-600'

    - navLinkStyle = 'nav-link text-base text-gray-800 ml-6 hover:text-teal-600'

    .flex.ml-auto.items-center
      .nav-item
        = link_to 'Features', '/features', class: navLinkStyle
      .nav-item
        = link_to 'Contact', '/contact', class: navLinkStyle

      - if user_signed_in?
          = render 'shared/header/user_is_signed_in'
      - else
        .nav-item
          = link_to 'Sign In', new_session_path(:user), class: navLinkStyle